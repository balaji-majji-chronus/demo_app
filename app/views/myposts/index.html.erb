<h1>Listing myposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @myposts.each do |mypost| %>
      <tr>
        <td><%= mypost.content %></td>
        <td><%= mypost.user_id %></td>
        <td><%= link_to 'Show', mypost %></td>
        <td><%= link_to 'Edit', edit_mypost_path(mypost) %></td>
        <td><%= link_to 'Destroy', mypost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

